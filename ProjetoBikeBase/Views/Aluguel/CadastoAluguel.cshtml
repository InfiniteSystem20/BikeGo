@model ProjetoBikeBase.Models.DTO.AluguelDTO

@{
    ViewBag.Title = "CadastoAluguel";
}

<h2>Cadasto do Aluguel</h2>

@using (Html.BeginForm("Agendamento"))
{

    <div class="editor-field">
        @Html.EditorFor(m => m.DataAtend, new { htmlAttributes = new { @type = "date" } })
    </div>

    <br />

    <div>Hora do Inicial</div>

    <div class="editor-field">
        @Html.EditorFor(m => m.HoraAtend, new { htmlAttributes = new { @type = "time" } })
    </div>

    <br />
    <div>Hora do Final</div>

    <div class="editor-field">
        @Html.EditorFor(m => m.HrFinal, new { htmlAttributes = new { @type = "time" } })
    </div>

    <br />
    <div>Valor Total</div>
    <div class="editor-field">
        @Html.EditorFor(m => m.ValorTotal, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <br />
    <div class="editor-field">
        @Html.DropDownList("Cli", "Escolha o Cliente")
    </div>

    <br />

    <div class="editor-field">
        @Html.DropDownList("Prod", "Escolha a Bicicleta")
    </div>

    <br />

    <div>
        <input type="submit" value="Cadastrar" />
    </div>
}

@ViewBag.msg



<div>
    @Html.ActionLink("Back to List", "Index")
</div>
